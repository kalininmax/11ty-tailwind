{% from "../icon/icon.nunj" import icon %}
{% from "../lang-menu/lang-menu.nunj" import langMenu %}

<header class="relative z-10 flex flex-wrap items-center gap-x-6 gap-y-3 px-[calc(48/1920*100%)] py-2.5 pt-1 min-h-[5.5rem] border-purple-1 border-b-2 bg-white box-border">
	<nav class="flex flex-grow flex-shrink-0 gap-x-6 mr-auto">
		<a href="/" class="flex items-center flex-shrink-0 mr-20" aria-label="{{ site.name }} - home">
			<img class="w-28 h-auto pl-[1px]" src="{{ site.logoSrc }}" width="{{ site.logoWidth }}" height="{{ site.logoHeight }}" alt="{{ site.logoAlt }}">
		</a>
		<ul class="flex flex-wrap flex-grow gap-x-12">
			{% for item in navigation.items %}
				<li class="flex items-center">
					<a class="flex items-center gap-x-4 py-4 text-grey-3 hover:text-black-1" href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>
						{{ icon({
								iconName: item.icon,
								className: "header__nav-icon",
								attributes: "width=24 height=24"
						}) }}
						{{ item.text }}
					</a>
				</li>
			{% endfor %}
		</ul>
	</nav>
	<div class="flex flex-wrap items-center flex-shrink-0 gap-x-6">
		{{ langMenu() }}
	</div>
</header>
